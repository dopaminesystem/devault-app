generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String  @id @default(cuid())
  email         String  @unique
  name          String?
  image         String?
  emailVerified Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sessions Session[]
  accounts Account[]

  ownedVaults Vault[]       @relation("VaultOwner")
  memberships VaultMember[]

  defaultVaultId String?
  defaultVault   Vault?  @relation("UserDefaultVault", fields: [defaultVaultId], references: [id])

  @@index([defaultVaultId])
  @@map("user")
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  expiresAt DateTime
  token     String
  createdAt DateTime
  updatedAt DateTime
  ipAddress String?
  userAgent String?
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id @default(cuid())
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String    @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@map("verification")
}

model Vault {
  id             String     @id @default(cuid())
  ownerId        String
  slug           String     @unique
  name           String
  description    String?
  accessType     AccessType @default(PUBLIC)
  passwordHash   String?
  discordGuildId String?
  discordRoleId  String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  owner      User           @relation("VaultOwner", fields: [ownerId], references: [id])
  members    VaultMember[]
  categories Category[]
  settings   VaultSettings?

  defaultForUsers User[] @relation("UserDefaultVault")

  @@index([ownerId])
  @@map("vault")
}

enum AccessType {
  PUBLIC
  PASSWORD
  DISCORD_GATED
}

model VaultMember {
  id       String    @id @default(cuid())
  vaultId  String
  userId   String
  role     VaultRole @default(MEMBER)
  joinedAt DateTime  @default(now())

  vault Vault @relation(fields: [vaultId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([vaultId, userId])
  @@index([userId])
  @@map("vault_member")
}

enum VaultRole {
  OWNER
  MEMBER
}

model Category {
  id        String   @id @default(cuid())
  vaultId   String
  name      String
  order     Int      @default(0)
  createdAt DateTime @default(now())

  vault     Vault      @relation(fields: [vaultId], references: [id], onDelete: Cascade)
  bookmarks Bookmark[]

  @@index([vaultId])
  @@map("category")
}

model Bookmark {
  id          String   @id @default(cuid())
  categoryId  String
  url         String
  title       String?
  description String?
  image       String?
  aiSummary   String?
  metadata    Json?
  tags        String[] @default([])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@index([categoryId])
  @@map("bookmark")
}

model VaultSettings {
  id            String  @id @default(cuid())
  vaultId       String  @unique
  theme         String? @default("light")
  allowComments Boolean @default(false)

  vault Vault @relation(fields: [vaultId], references: [id], onDelete: Cascade)

  @@map("vault_settings")
}
